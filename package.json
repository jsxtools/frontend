{
  "name": "frontend",
  "version": "0.0.0",
  "description": "A collection of frontend packages",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "scripts": {
    "bootstrap": "run-s bootstrap:install bootstrap:hoist",
    "bootstrap:install": "lerna exec npm install",
    "bootstrap:hoist": "lerna bootstrap --hoist --strict",
    "build": "run-p build:*",
    "build:dts": "node cmd/dts",
    "build:rollup": "node cmd/rollup",
    "create": "node cmd/create",
    "publish": "run-s bootstrap build",
    "postpublish": "lerna publish from-package",
    "prepare": "run-s build bootstrap",
    "test": "run-s test:*",
    "test:eslint": "node cmd/eslint",
    "test:jest": "node cmd/jest",
    "watch": "run-p 'test:* -- --watch'"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 10,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-prototype-builtins": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverage": true,
    "timers": "fake"
  },
  "lint-staged": {
    "*": [
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.4",
    "@types/node-fetch": "^2.5.5",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-jest": "^25.1.0",
    "chokidar": "^3.3.1",
    "codecov": "^3.6.5",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "miniglob": "^0.1.1",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.1.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^5.3.0",
    "typescript": "^3.8.3"
  },
  "private": true
}
